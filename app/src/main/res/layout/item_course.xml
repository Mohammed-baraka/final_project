<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView_courseImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_7" />

    <TextView
        android:id="@+id/textView_courseTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat2"
        app:layout_constraintStart_toEndOf="@id/imageView_courseImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/textView_courseDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Course Description"
        android:fontFamily="@font/montserrat2"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imageView_courseImage"
        app:layout_constraintTop_toBottomOf="@id/textView_courseTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/textView_courseInstructor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instructor Name"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"
        android:textColor="#757575"
        app:layout_constraintStart_toEndOf="@id/imageView_courseImage"
        app:layout_constraintTop_toBottomOf="@id/textView_courseDescription"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/textView_coursePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: $0"
        android:textSize="14sp"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/textView_courseInstructor"
        app:layout_constraintStart_toEndOf="@id/imageView_courseImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
